{
	"name": "flowbite-solid",
	"version": "0.0.1",
	"description": "Official Solid components built for Flowbite and Tailwind CSS",
	"license": "MIT",
	"author": "bijinfeng",
	"contributors": [],
	"keywords": [
		"solid"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bijinfeng/flowbite-solid.git"
	},
	"homepage": "https://github.com/bijinfeng/flowbite-solid#readme",
	"bugs": {
		"url": "https://github.com/bijinfeng/flowbite-solid/issues"
	},
	"private": false,
	"sideEffects": false,
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"solid": "./dist/index.jsx",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"play": "vite --config playground/vite.config.ts",
		"typecheck": "tsc --noEmit",
		"release": "bumpp && pnpm publish",
		"prepublishOnly": "pnpm run build"
	},
	"peerDependencies": {
		"solid-js": "^1.6.0"
	},
	"dependencies": {
		"@floating-ui/core": "^1.7.3",
		"flowbite": "^3.1.2",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"tsdown": "^0.16.0"
	}
}
